{
  "name": "random-pokemon-generator",
  "version": "1.0.2",
  "description": "A generator for the g!randteam format and its permutations",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "tsc && electron . --dev",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.randompokemon.app",
    "productName": "G!randteam Generator",
    "publish": [
      {
        "provider": "github",
        "owner": "Zyph-er",
        "repo": "randteam-site"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "styles.css",
      "main.js",
      "updater.js",
      "pokedex.js",
      "appicon.jpg",
      "package.json"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "appicon.jpg",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "grandteam-portable-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "grandteam-setup-${version}.exe"
    }
  },
  "keywords": [
    "pokemon",
    "random",
    "generator",
    "electron"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
